<%= form_tag sort_admin_speakers_path, method: :put do |f| %>
<h1><%= Admin::Speaker.model_name.human %> <%= link_to t('crud.new'), new_admin_speaker_path, class: 'btn btn-lg btn-success' %> <%= submit_tag '更新排序', class: 'btn btn-lg btn-primary' %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <%= th_for Admin::Speaker, :id, :is_online, :avatar, :name, :title, :role, :summary %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody class="sortable" data-items=".admin_speaker">
    <% @admin_speakers.each do |admin_speaker| %>
    <%= content_tag_for :tr, admin_speaker do %>
      <%= hidden_field_tag "sort[#{admin_speaker.id}][sort_id]", admin_speaker.sort_id %>
      <td><i class="glyphicon glyphicon-move"></i></td>
      <%= td_for admin_speaker, :id, td_is_online(admin_speaker), :avatar, :name, :title, :role_text, :summary %>
      <%= td_action_for admin_speaker %>
    <% end %>
    <% end %>
  </tbody>
</table>
<% end %>