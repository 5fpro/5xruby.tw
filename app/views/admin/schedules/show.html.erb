<table class="table table-striped table-bordered">
  <thead>
    <th>屬性</th>
    <th>值</th>
  </thead>
  <tbody>
    <%= tr_for @admin_schedule, :id, [:stage, ->(s){ link_to(s.stage.course.title, admin_course_path(s.stage.course)) + " -> #{s.stage.title}" }], :date, :description %>
  </tbody>
</table>

<div class="page-header"><h2><%= Event.model_name.human %></h2></div>

<table class="table">
  <thead>
    <%= th_for Event, :start_at, :title, :description, :speaker %>
  </thead>
  <tbody>
    <% @admin_schedule.events.each do |event| %>
      <tr>
        <td><%= l event.start_at, format: '%H:%M' %></td>
        <%= td_for event, :title, :description %>
        <td><%= link_to event.speaker.name, admin_speaker_path(event.speaker) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header"><h2><%= Apply.model_name.human %></h2></div>

<table class="table">
  <thead>
    <th></th>
    <%= th_for Apply, :id, :first_name, :last_name, :phone, :email, :age, :gender, :message %>
  </thead>
  <tbody>
    <% @admin_schedule.applies.each do |apply| %>
      <tr>
        <td><%= link_to content_tag(:i, nil, class: 'glyphicon glyphicon-link'), apply %></td>
        <%= td_for apply, :id, :first_name, :last_name, :phone, :email, :age, :gender, :message %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-group">
  <%= link_to t('crud.edit'), edit_admin_schedule_path(@admin_schedule), class: 'btn btn-info btn-lg' %>
  <%= link_to t('action.back'), admin_schedules_path, class: 'btn btn-default btn-lg' %>
</div>