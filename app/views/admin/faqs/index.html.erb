<h1><%= Admin::Faq.model_name.human %> <%= link_to t('crud.new'), new_admin_faq_path, class: 'btn btn-lg btn-success' %></h1>

<%= paginate @admin_faqs %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Admin::Faq, :id, :question, :answer, :is_online %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_faqs.each do |admin_faq| %>
      <tr>
        <%= td_for admin_faq, :id, :question, :answer, :is_online %>
        <%= td_action_for admin_faq %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_faqs %>