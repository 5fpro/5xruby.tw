<%#section id="map"></section%><!-- end map-->
<section id="directions" class="hide">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
       <form action="http://maps.google.com/maps" method="get" target="_blank">
        <div class="input-group">
          <input type="text" name="saddr" placeholder="<%= t('.enter_your_starting_point') %>" class="form-control style-2" />
          <input type="hidden" name="daddr" value="<%= t('company.address') %>"/><!-- Write here your end point -->
          <span class="input-group-btn">
            <button class="btn" type="submit" value="Get directions" style="margin-left:0;"><%= t('.get_directions') %></button>
          </span>
        </div><!-- /input-group -->
      </form>
    </div>
  </div>
</div>
</section>

<section id="main_content" >
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h3><%= t('.address') %></h3>
        <ul id="contact-info">
          <li><i class="icon-home"></i> <%= t('company.address') %></li>
          <li><i class="icon-phone"></i> +886 928 617 687</li>
          <li><i class=" icon-email"></i> <%= mail_to t('company.email') %></a></li>
        </ul>
        <hr>
        <h3><%= t('.follow_us') %></h3>
        <p>
          如果您希望可以取得我們的活動或課程資訊，歡迎您加入我們的社群帳號。
        </p>
        <ul id="follow_us_contacts">
          <li><a href="https://www.facebook.com/5xruby"><i class="icon-facebook"></i>fb.com/5xruby</a></li>
          <li><a href="https://twitter.com/5xruby"><i class="icon-twitter"></i>twitter.com/5xruby</a></li>
        </ul>
        <hr>
        <h3>報名課程</h3>
        <p>
          對我們的課程有興趣嗎? [待補充]
        </p>
        <a href="#" class="button_medium_outline">報名</a>
      </div>
      <div class="col-md-8">
        <div class=" box_style_2">
          <span class="tape"></span>
          <div class="row">
            <div class="col-md-12">
              <h3><%= t('.general_enquire') %></h3>
            </div>
          </div>
          <div id="message-contact"></div>
          <%= form_for @contact, id: :contactform do |f| %>
            <div class="row">
              <div class="col-md-6 col-sm-6">
                <div class="form-group <%= has_error_class @contact, :first_name %>">
                  <%= f.text_field :first_name, class: 'form-control style_2', placeholder: Contact.human_attribute_name(:first_name) %>
                  <%= help_block @contact, :first_name %>
                  <span class="input-icon"><i class="icon-user"></i></span>
                </div>
              </div>
              <div class="col-md-6 col-sm-6">
                <div class="form-group <%= has_error_class @contact, :last_name %>">
                  <%= f.text_field :last_name, class: 'form-control style_2', placeholder: Contact.human_attribute_name(:last_name) %>
                  <%= help_block @contact, :last_name %>
                  <span class="input-icon"><i class="icon-user"></i></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 col-sm-6">
                <div class="form-group <%= has_error_class @contact, :email %>">
                  <%= f.text_field :email, class: 'form-control style_2', placeholder: Contact.human_attribute_name(:email) %>
                  <%= help_block @contact, :email %>
                  <span class="input-icon"><i class="icon-email"></i></span>
                </div>
              </div>
              <div class="col-md-6 col-sm-6">
                <div class="form-group <%= has_error_class @contact, :phone %>">
                  <%= f.text_field :phone, class: 'form-control style_2', placeholder: Contact.human_attribute_name(:phone) %>
                  <%= help_block @contact, :phone %>
                  <span class="input-icon"><i class="icon-phone"></i></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group <%= has_error_class @contact, :message %>">
                  <%= f.text_area :message, rows: 5, class: 'form-control', placeholder: t('.write_your_message'), style: 'height:200px;' %>
                  <%= help_block @contact, :message %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <%= render 'layouts/recaptcha' %>
                <div class="has-error"><%= help_block @contact, :base %></div>
                <hr>
                <%= f.submit t('.submit'), class: 'button_medium' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for :append_body do %>
  <!-- GOOGLE MAP -->
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
  <script type="text/javascript" src="js/mapmarker.jquery.js"></script>
  <script type="text/javascript" src="js/mapmarker_func.jquery.js"></script>
<% end %>
