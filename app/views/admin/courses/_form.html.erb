<%= simple_nested_form_for(@admin_course) do |f| %>

  <div class="form-inputs">
    <%= f.association :category, input_html: {class: 'select2'} %>
    <%= f.association :speakers, input_html: {class: 'select2'} %>
    <%= f.input :image %>
    <%= f.input :image_cache, as: :hidden %>
    <% if @admin_course.image? %>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-11">
        <%= image_tag(@admin_course.image.preview) %>
      </div>
    </div>
    <%= f.input :remove_image, as: :boolean %>
    <% end %>
    <%= f.input :title %>
    <%= f.input :permalink %>
    <%= f.input :iframe_html, as: :text, hint: "活動通或 KKTIX 之報名 iframe code" %>
    <%= f.input :subtitle %>
    <%= f.input :summary, hint: '最多 150 字，用在 meta tag 和 courses/index 頁面' %>
    <%= f.input :what_will_learn, input_html: {class: :redactor} %>
    <%= f.input :description, input_html: {class: :redactor} %>
    <%= f.input :note, input_html: {class: :redactor} %>
    <%= f.input :is_online %>
    <%= f.input :apply_link, hint: '留空則使用網站內部的報名系統' %>
  </div>

  <%= render 'stages_fields', f: f %>
  <hr>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
