<%= sub_header title: InterviewQuestion.model_name.human, lead: t('.lead') %>

<section id="main_content">
  <div class="container">
    <% @interview_questions.each do |interview_question| %>
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-body highlight question"><%= MarkdownRenderer.render interview_question.question %></div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title"><a data-toggle="collapse" href="#<%= dom_id interview_question %>"><%= t('.answer') %></a></h4>
        </div>
        <div id="<%= dom_id interview_question %>" class="panel-collapse collapse">
          <div class="panel-body highlight"><%= MarkdownRenderer.render interview_question.answer %></div>
        </div>
      </div>  
    </div>
    <% end %>
  </div>
</section>