<%= form_tag sort_admin_categories_path, method: :put do |f| %>
<h1><%= Admin::Category.model_name.human %> <%= link_to t('crud.new'), new_admin_category_path, class: 'btn btn-lg btn-success' %> <%= submit_tag '更新排序', class: 'btn btn-lg btn-primary' %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <%= th_for Admin::Category, :id, :name, :permalink, :is_highlighted %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="sortable" data-items=".admin_category">
    <% @admin_categories.each do |admin_category| %>
      <%= content_tag_for :tr, admin_category do %>
        <%= hidden_field_tag "sort[#{admin_category.id}][sort_id]", admin_category.sort_id %>
        <td><i class="glyphicon glyphicon-move"></i></td>
        <%= td_for admin_category, :id, :name, :permalink, :is_highlighted %>
        <%= td_action_for admin_category %>
      <% end %>
    <% end %>
  </tbody>
</table>

<% end %>