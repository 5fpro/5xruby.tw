<section id="sub-header" class="pattern_1" >
  <div class="container">

    <div class="row">
      <div class="col-md-12 text-center">
        <h1><%= @course.title %></h1>
        <p class="lead"><%= @course.subtitle %></p>
      </div>
    </div><!-- End row -->

    <div class="row" id="sub-header-features">
      <div class="col-md-6">
        <h2><%= t('.summary') %></h2>
        <p><%= @course.summary %></p>
      </div>
      <div class="col-md-6">
        <h2><%= t('.what_you_will_learn') %></h2>
        <%= sanitize @course.what_will_learn %>
      </div>

    </div><!-- End row -->
  </div><!-- End container -->
  <div class="divider_top"></div>
</section>

<section id="strips-course" class="shadow">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="lead add_bottom_45"><%= sanitize @course.description %></div>
      </div>
    </div>
  </div>

  <% @course.stages.each_with_index do |stage, index| %>
  <%= render stage, index: index %>
  <% end %>

  <div class="container">
    <% if note = @course.note.presence %>
      <h3><%= t('.note') %></h3>
      <%= sanitize @course.note %>
    <% end %>
    <%#= render "question_box" %>
  </div>

</section>

<section id="join">
 <div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
      <div class="row">
      <div class="col-md-2 hidden-sm hidden-xs"><img src="/img/arrow_hand_1.png" alt="Arrow" > </div>
        <div class="col-md-8"%><%= link_to t('.apply_now'), apply_url(@course), class: 'button_big' %></div>
      </div>
    </div>
  </div>
</div>
</section>
