<section id="main_content">
  <div class="container">
    <div class="row add_bottom_30">
      <div class="col-md-12 text-center">
        <h2><%= t('.next_courses') %></h2>
        <%#p class="lead"><%#= t('.next_courses_detail') ></p%>
      </div>
    </div>
    <div class="row">
      <% @next_courses.each_slice(2) do |next_course| %>
      <div class="col-md-6">
        <%= render partial: 'next_course', collection: next_course %>
      </div>
      <% end %>
    </div>
    <%#= render 'main_content_extra' %>
    <hr class="add_bottom_30">
    <div class="row">
      <div class="col-md-12">
        <%= render 'layouts/cooperation_list' %>
      </div>
    </div>

    <hr class="add_bottom_30">
    <div class="row">
      <div class="col-xs-12">
        <h2 class="text-center">贊助商</h2>
        <%= link_to(image_tag("SPONSORbanner.jpg", class: "img-responsive"), "http://2015.rubyworld-conf.org/") %>
      </div>
    </div>
  </div>
  <!-- End container -->
</section>
