<%= content_tag_for :div, post, class: 'post' do %>
  <%= link_to image_tag(post.image.thumb, class: 'img-responsive'), (action_name == 'index' ? post : post.image.url), title: post.title %>
  <div class="post_info clearfix">
    <div class="post-left">
      <ul>
        <li><i class="icon-calendar-empty"></i><!-- On  --><span><%= l post.created_at, format: :short %></span></li>
        <li><i class="icon-user"></i>By <a href="#"><%= post.author.try(:name) %></a></li>
        <li><i class="icon-tags"></i>Tags <a href="#">Works</a> <a href="#">Personal</a></li>
      </ul>
    </div>
    <% if action_name == 'index' %><div class="post-right"><i class="icon-comment"></i><%= link_to '', post_url(post, anchor: :disqus_thread) %></div><% end %>
  </div>
  <h2><%= link_to post.title, post, title: post.title %></h2>
  <div class="highlight">
    <% if action_name == 'index' %>
      <p><%= post.summary %></p>
    <% else %>
      <%= sanitize MarkdownRenderer.render(post.content) %>
    <% end %>
  </div>
  <%= link_to t('.read_more'), post, class: 'button_medium', title: post.title if action_name == 'index' %>
<% end %>