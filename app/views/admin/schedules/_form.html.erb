<%= simple_nested_form_for(@admin_schedule, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-inputs">
    <div class="form-group">
      <label for="course" class="control-label col-sm-1"><%= Course.model_name.human %></label>
      <div class="col-sm-10">
        <%= text_field_tag :course, (@admin_schedule.stage.course.id rescue nil), class: 'select2-single', data: {model: :Course, column: :title, init: @admin_schedule.stage.try(:course).try(:title)} %>
      </div>
    </div>
    <%= f.association :stage, as: :string, input_html: {class: '', data: {model: :Stage, column: :title, init: @admin_schedule.stage.try(:title)}} %>
    <%= f.input :date %>
    <%= f.input :description, input_html: {class: 'redactor'} %>
    <%= render 'events_fields', f: f %>
  </div>
  <hr>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
