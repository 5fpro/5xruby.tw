<div class="page-header"><h2><%= Stage.model_name.human %></h2></div>
<table id="stages" class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <%= th_for Stage, :sort_id, :title, :description %>
    </tr>
  </thead>
  <tbody>
    <%= f.simple_fields_for :stages, wrapper: false do |ff| %>
      <tr class="fields">
        <td><i class="icon-move"></i></td>
        <td><%= ff.link_to_remove content_tag(:i, nil, class: 'icon-trash') %></td>
        <td><%= ff.input_field :sort_id, class: 'form-control', label: false %></td>
        <td><%= ff.input_field :title, class: 'form-control', label: false %></td>
        <td><%= ff.input_field :description, class: 'form-control', label: false %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= f.link_to_add content_tag(:i, nil, class: 'icon-plus'), :stages, class: 'btn btn-xs btn-success', data: {target: '#stages'} %>