<h1><%= Admin::Course.model_name.human %> <%= link_to t('crud.new'), new_admin_course_path, class: 'btn btn-lg btn-success' %></h1>

<%= paginate @admin_courses %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Admin::Course, :id, :category, :image, :title, :permalink, :subtitle, :summary, :what_will_learn, :description %>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_courses.each do |admin_course| %>
      <tr>
        <%= td_for admin_course, :id, [:category, :name], :image, :title, :permalink, :subtitle, :summary, :what_will_learn, :description %>
        <td><%= link_to '複製', new_admin_course_path(fork: admin_course) %></td>
        <%= td_action_for admin_course %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_courses %>