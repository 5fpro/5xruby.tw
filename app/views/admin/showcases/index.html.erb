<h1><%= Admin::Showcase.model_name.human %> <%= link_to t('crud.new'), new_admin_showcase_path, class: 'btn btn-lg btn-success' %></h1>

<%= paginate @admin_showcases %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Admin::Showcase, :id, :name, :description, :link, :image, :is_online, :sort_id %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_showcases.each do |admin_showcase| %>
      <tr>
        <%= td_for admin_showcase, :id, :name, :description, :link, :image, :is_online, :sort_id %>
        <%= td_action_for admin_showcase %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_showcases %>